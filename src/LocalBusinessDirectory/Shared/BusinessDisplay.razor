@inject NavigationManager nav

@if (Business is not null)
{
    <div class="bg-green-500/20 shadow rounded p-8 cursor-pointer flex transition hover:bg-green-500/30" @onclick="@(() => nav.NavigateTo($"/business/{Business.Id}"))">
        <div class="h-48 max-h-48 w-1/4 min-w-1/4 overflow-hidden">
            <img src="images/@Business.ImageUrl" class="rounded h-full object-cover" />
        </div>
        <div class="max-h-48 overflow-hidden px-8">
            <div class="font-bold mb-3">@Business.Name</div>
            <div class="mb-3">@Business.Address.Format()</div>
            <div class="mb-4 flex items-center">
                <StarDisplay Stars="@Business.Rating" UseSvgs="true" />
                <span class="ml-2">(@Business.NumberOfRatings)</span>
            </div>
            <div class="text-sm text-black/80">@Business.Description</div>
        </div>
        <div class="flex flex-col items-end">
            @if (Business.IsPartnered)
            {
                <div class="group relative">
                    <svg class="fill-green-800" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 576 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path d="M316.9 18C311.6 7 300.4 0 288.1 0s-23.4 7-28.8 18L195 150.3 51.4 171.5c-12 1.8-22 10.2-25.7 21.7s-.7 24.2 7.9 32.7L137.8 329 113.2 474.7c-2 12 3 24.2 12.9 31.3s23 8 33.8 2.3l128.3-68.5 128.3 68.5c10.8 5.7 23.9 4.9 33.8-2.3s14.9-19.3 12.9-31.3L438.5 329 542.7 225.9c8.6-8.5 11.7-21.2 7.9-32.7s-13.7-19.9-25.7-21.7L381.2 150.3 316.9 18z" /></svg>
                    <div class="opacity-0 absolute bottom-6 left-1/2 -translate-x-1/2 transition duration-100 ease-in-out pointer-events-none text-white text-center flex flex-col items-center group-hover:opacity-100 group-hover:pointer-events-auto">
                        <div class="bg-neutral-900 text-xs rounded whitespace-nowrap p-1">
                            [Our Brand] Member
                        </div>
                        <div class="w-0 h-0 border-4 border-b-0 border-x-transparent border-t-neutral-900"></div>
                    </div>
                </div>
            }
            <div class="text-sm mt-auto">
                @Business.CategoryName
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public Business? Business { get; set; }
}
